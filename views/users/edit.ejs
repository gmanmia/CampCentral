<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit <%= user.username%>'s Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%=user._id%>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" type="text" name="updatedInfo[firstName]" value="<%=user.firstName%>">
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" type="text" name="updatedInfo[lastName]" value="<%=user.lastName%>">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input class="form-control" type="email" name="updatedInfo[email]" value="<%=user.email%>">
            </div>
            <div class="form-group">
                <label>Avatar URL</label>
                <input class="form-control" type="text" name="updatedInfo[avatar]" value="<%=user.avatar%>">
            </div>
            <div class="form-group">
                <label>About Me</label>
                <input class="form-control" type="text" name="updatedInfo[about]" value="<%=user.about%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update Profile</button>
            </div>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>

<% include ../partials/footer %>